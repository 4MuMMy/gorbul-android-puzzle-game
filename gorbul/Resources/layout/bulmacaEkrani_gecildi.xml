<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/gecildiRl"
    >
    
    <FrameLayout
        android:id="@+id/ustTaraf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_alignParentTop="true">
        
        <Button
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="right"
            android:id="@+id/kapatBtn" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"> 
        
        <TextView
            android:id="@+id/gecildiTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="#dddddd"
            android:text=""/>

        <ImageView
            android:layout_width="0px"
            android:layout_height="0px"
            android:contentDescription=""
            android:id="@+id/yildizImg"
            android:foregroundGravity="center"
            android:focusable="false" />

        <TextView
            android:id="@+id/puanTxt"
            android:layout_width="0px"
            android:layout_height="0px"
            android:textAlignment="center"
            android:textColor="#dddddd"
            android:text=""/>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/altTaraf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        
        <Button
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="left"
            android:id="@+id/bolumlereDonBtn" />

        <Button
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:id="@+id/tekrarBtn" />

        <Button
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="right"
            android:id="@+id/sonrakiBolumBtn" />

    </FrameLayout>


</RelativeLayout>
