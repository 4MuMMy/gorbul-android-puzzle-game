<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/profilR1"
    >
    
    <FrameLayout
        android:id="@+id/profil_ustTaraf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_alignParentTop="true">
        
        <Button
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="right"
            android:id="@+id/profilKapatBtn" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/profil_leaderFL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_alignParentTop="true">
        
        <Button
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="left"
            android:id="@+id/profil_leaderBtn" />

    </FrameLayout>
    
    <FrameLayout
        android:id="@+id/profil_achiFL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_alignParentBottom="true">
        
        <Button
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/profil_achiBtn" />

    </FrameLayout>
    
    
    <LinearLayout
        android:layout_width="0px" 
        android:layout_height="0px"
        android:orientation="vertical"
        android:id="@+id/profilL2">

            <ImageView
                android:layout_width="0px"
                android:layout_height="0px"
                android:contentDescription=""
                android:id="@+id/profil_PR"
                android:foregroundGravity="center"
                android:focusable="false" />

            <TextView
                android:id="@+id/profil_kAdi"
                android:layout_width="0px"
                android:layout_height="0px"
                android:textColor="#dddddd"
                android:text=""/>

            
            <TextView
                android:id="@+id/profil_basarimlarTxt"
                android:layout_width="0px"
                android:layout_height="0px"
                android:textColor="#dddddd"
                android:text=""/>
            
        
            <ScrollView
                android:layout_width="0px"
                android:layout_height="0px"
                android:id="@+id/profilScroll" >

                <LinearLayout
                    android:id="@+id/profil_basarimlarL"
                    android:layout_width="match_parent" 
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                </LinearLayout>
            
            </ScrollView>

    </LinearLayout>


</RelativeLayout>
